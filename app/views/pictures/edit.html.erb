<div class="login center-block">
<h1>Editing picture</h1>

<%= form_for(@picture, html:{role:"form", class: "form-horizontal"}) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :created_at, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">   
    <%= f.text_field :created_at, class: "form-control", disabled:"true" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">   
    <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :public, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :public, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: "btn btn-success" %>
      <%=link_to "Download", @picture.image_data, download: @picture.name , class: "btn btn-success"%>
      <%= link_to 'Cancel', request.referer, class: "btn btn-success" %>
			<%= link_to 'Delete', picture_path(params[:id]), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
</div>


